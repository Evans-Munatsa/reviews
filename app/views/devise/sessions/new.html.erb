<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" } %>
    <%= f.input :password, required: false, input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>



<div id="login">
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                        <form id="login-form" class="form" action="" method="post">
                          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

                            <h3 class="text-center text-info">Login</h3>
                            <div class="form-group">
                              <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, class:"form-control" %>
                            </div>
                            <div class="form-group">
                                <%= f.input :password, required: false, input_html: { autocomplete: "current-password" }, class:"form-control" %>
                            </div>
                            <div class="form-group">
                                    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                                    <%= f.button :submit, "Log in", class:"btn btn-info btn-md" %>
                            </div>
                            <div id="register-link" class="text-right">
                                <%= render "devise/shared/links", class:"text-info" %>
                            </div>
                          <% end %>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>